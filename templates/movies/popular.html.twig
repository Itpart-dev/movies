<div class="jumbotron">
    <div data-component-video="" style="min-height:240px;min-width:240px;position:relative">
        <iframe frameborder="0" src="{{ data.link | video_url_2_embedUrl}}"
                style="width:100%;height:100%;position:absolute;left:0px;pointer-events:none"></iframe>
    </div>
    <div class="media text-muted pt-3 superposed">
        <img data-src="{{ data.poster_path }}" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;"
             src="{{ data.poster_path }}" data-holder-rendered="true">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">{{ data.original_title }}</strong>
            {{ data.trailer_description }}
        </p>
    </div>
</div>

